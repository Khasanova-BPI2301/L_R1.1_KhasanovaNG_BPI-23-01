<Window x:Class="L_R1._1_Khasanova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L_R1._1_Khasanova"
        mc:Ignorable="d"
       Title="Правильная дробь" Height="450" Width="600">
	<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition />
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>    
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="0" Text="Введите числитель:"
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment= "Center"/>
        
        <TextBox Grid.Column="1" Grid.Row="1" Margin="0,0,50,0" 
                 PreviewTextInput="TextBox_PreviewTextInput" 
                 PreviewKeyDown="TextBox_PreviewKeyDown" 
                 x:Name="numeratorTextBox"/>
        
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Введите знаменатель:"
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment= "Center"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="0,0,50,0" 
                 PreviewTextInput="TextBox_PreviewTextInput" 
                 PreviewKeyDown="TextBox_PreviewKeyDown" 
                 x:Name="denominatorTextBox"/>

    </Grid>
</Window>